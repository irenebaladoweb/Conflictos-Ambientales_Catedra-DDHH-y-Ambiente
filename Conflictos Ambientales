    <h2>Mapa de Conflictos Ambientales</h2>
    <div class="control-panel">
        <input type="file" id="geojson-upload" accept=".geojson,application/json" />
        <label for="geojson-upload">Cargar archivo GeoJSON</label>
    </div>
    <div id="map"></div>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <!-- Tu JS con simbología personalizada -->
    <script src="leaflet-estilos_Version6.js"></script>
    <script>
    // Inicializa el mapa centrado en Uruguay
    var map = L.map('map').setView([-32.5228, -55.7658], 6);

    // Añade los mosaicos base
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // Esta variable permite acceder al mapa desde leaflet-estilos.js
    window.map = map;
    </script>
</body>
